<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="43dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="7dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="41dp">

            <TextView
                android:id="@+id/episodeNumberView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:text="S01E01"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/episodeNameView"
                android:layout_width="147dp"
                android:layout_height="15dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="81dp"
                android:layout_toRightOf="@id/episodeNumberView"
                android:text="Pilot"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/episodeDataView"
                android:layout_width="104dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/episodeNameView"
                android:text="December 2, 2013"
                android:textSize="12dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>